const app = Vue.createApp({
    data() {
        return {
            counter1: 0,
            todo: 'expeceted to...'
        }
    },
    methods: {
        submitForm(e) {
            // toggle this to show difference
            // e.preventDefault()
            alert('表單提交了!')
        },
        setToDo(e,prefix) {
            this.todo = `${prefix} ${e.target.value}`;
        },
        increase1(step) {
            this.counter1 = this.counter1 + step
        },
        decrease1: function (step) {
            this.counter1 = this.counter1 - step
        }
    }
})
app.mount('#app')
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
const app = Vue.createApp({
    data() {
        return {
            counter1: 0,
            todo: 'expeceted to...'
        }
    },
    methods: {
        submitForm(e) {
            // toggle this to show difference
            e.preventDefault()
            alert('表單提交了!')
        },
        submitForm2(e) {
            // no preventDefault() here
            alert('表單2也提交了!')
        },
        setToDo(e,prefix) {
            this.todo = `${prefix} ${e.target.value}`;
        },
        increase1(step) {
            this.counter1 = this.counter1 + step
        },
        decrease1: function (step) {
            this.counter1 = this.counter1 - step
        }
    }
})
app.mount('#app')
